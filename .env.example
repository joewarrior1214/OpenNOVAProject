# Nova Syntheia — Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# LLM Providers (via LiteLLM — mixed provider strategy)
# ============================================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Default models per constitutional role
JUDICIAL_MODEL=anthropic/claude-sonnet-4-20250514
EXECUTIVE_MODEL=openai/gpt-4o
FEDERAL_RESERVE_MODEL=anthropic/claude-sonnet-4-20250514
CITATION_MODEL=openai/gpt-4o-mini
CUSTODIAN_MODEL=openai/gpt-4o-mini

# ============================================================
# PostgreSQL (National Ledger)
# ============================================================
POSTGRES_USER=nova_syntheia
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=national_ledger
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL_SYNC=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================================
# ChromaDB (Constitutional Citations & Precedent)
# ============================================================
CHROMA_HOST=chromadb
CHROMA_PORT=8100

# ============================================================
# Alpaca Brokerage
# ============================================================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# Set to https://api.alpaca.markets for live trading

# ============================================================
# Dashboard
# ============================================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000
JWT_SECRET_KEY=change-me-generate-a-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ============================================================
# Nova Syntheia Configuration
# ============================================================
FOUNDING_ERA=true
HUMAN_FOUNDER_ID=founder-001
EMERGENCY_DELIBERATION_HOURS=24
NORMAL_DELIBERATION_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
